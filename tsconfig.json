{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/",
    "paths": {
      "@patternfly/react-core": ["./node_modules/@patternfly/react-core/dist/types"]
    }
  },
  "exclude": [
    "node_modules",
    "dist/**"
  ],
  "include": [
    "custom.d.ts",
    "src/*.tsx"
  ]
}
